  	<title>Pocket Planes Marketplace</title>

  	<%= stylesheet_link_tag    "application" %>
  	<%= javascript_include_tag "vendor/custom.modernizr" %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <div class="row">
      <div class="large-12 columns">

        <!-- Navigation -->
        <div class="row">
          <div class="large-12 columns">
            <nav class="top-bar">
              <ul class="title-area">
                <li class="name">
                  <h1><%= link_to "Pocket Planes Marketplace", offers_path %></a></h1>
                </li>
              </ul>
              <section class="top-bar-section">
                <ul class="right">
                  <li class="divider"></li>
                  <li><%= link_to "Offers", offers_path %></li>
                  <li class="divider"></li>
                  <% if user_signed_in? %>
                  <li><%= link_to "Profile", edit_user_path %></li>
                  <li class="divider"></li>
                  <li><%= link_to "Logout", signout_path %></li>
                  <li class="divider"></li>
                  <% else %>
                  <li><%= link_to "Sign in with Google", user_omniauth_authorize_path(:google_oauth2) %></li>
                  <li class="divider"></li>
                  <% end %>
                  <li><%= link_to('FAQ', faq_path) %></li>
                </ul>
              </div>
            </section>
          </nav>
        </div>
      </div>

      <div class="row">

        <!-- Side Bar -->
        <div class="large-4 small-12 columns">
          <img src="http://placehold.it/500x500&text=Logo">
