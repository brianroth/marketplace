            <h6>99&nbsp; items in your cart</h6>
          </div>
          </a>
        </div>

        <!-- End Side Bar -->
        
        <!-- Thumbnails -->

        <div class="large-8 columns">
          <div class="row">
            <%= yield %>
          </div>

          <!-- End Thumbnails -->

          <!-- Managed By -->
          <div class="row">
            <div class="large-12 columns">
              <div class="panel">
                <div class="row">

                  <div class="large-2 small-6 columns">
                    <img src="http://placehold.it/300x300&text=Site Owner">
                  </div>

                  <div class="large-10 small-6 columns">
