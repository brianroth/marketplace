<!--[if (gte IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
  <head>
  	<meta charset="utf-8" />

  	<!-- Uncomment to make IE8 render like IE7 -->
  	<!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  	<!-- Set the viewport width to device width for mobile -->
  	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

  	<title>Pocket Planes Marketplace</title>

  	<%= stylesheet_link_tag    "application" %>
  	<%= javascript_include_tag "vendor/custom.modernizr" %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <nav class="top-bar">
      <ul class="title-area">
        <li class="name">
          <h1><%= link_to "Pocket Planes Marketplace", offers_path %></a></h1>
        </li>
      </ul>
      <section class="top-bar-section">
        <ul class="right">
          <li class="divider"></li>
          <li><%= link_to "Parts", offers_path %></li>
          <li class="divider"></li>
          <li><%= link_to "Active Offerss", offers_path %></li>
          <li class="divider"></li>
          <% if user_signed_in? %>
          <li><%= link_to "Profile", edit_user_path %></li>
          <li class="divider"></li>
          <li><%= link_to "Logout", signout_path %></li>
          <li class="divider"></li>
          <% else %>
          <li><%= link_to "Sign in with Google", user_omniauth_authorize_path(:google_oauth2) %></li>
          <li class="divider"></li>
          <% end %>
          <li><%= link_to('FAQ', faq_path) %></li>
        </ul>
      </div>
    </nav>
    <% if flash[:notice] %>
      <div class="alert-box" data-alert="">
        <%= flash[:notice] %><a class="close" href="">Ã—</a>
      </div>
    <% end %>
    <div class="row">
      <div class="large-8 columns">
        <%= yield %>
      </div>
    </div>
    <%= javascript_include_tag "application" %>
  </body>
</html>
