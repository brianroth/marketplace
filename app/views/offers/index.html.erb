<h1>Offers</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
      <th width="100">Plane</th>
      <th width="100">Part</th>
      <th width="100">Apple ID</th>
      <th width="400">Comment</th>
    </tr>
  </thead>
  <tbody>
<% if user_signed_in? %>
<% @offers.each do |offer| %>
  <tr>
    <td><%= link_to 'Show', offer %></td>
    <td><%= link_to 'Edit', edit_offer_path(offer) %></td>
    <td><%= link_to 'Destroy', offer, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
    <td><%= offer.plane.name %></td>
    <td><%= offer.part.name if offer.part %></td>
    <td><%= offer.user.gamecenter_id %></td>
    <td><%= offer.comment %></td>
  </tr>
<% end %>
<%else%>
  <tr>
    <td colspan=7>
      You must be logged in to view offers
    </td>
  </tr>
<%end%>
  <tbody>
</table>
<% if user_signed_in? %>
<%= link_to 'Create Offer', new_offer_path, class: "button radius" %>
<%end%>